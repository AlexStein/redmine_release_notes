<div class="box tabular settings">
<%= form_tag(:action => :plugin) do %>
  <p>
  <%= label_tag 'settings_issue_required_field_id',
    t('release_notes.config.issue_required_field.name') %>
  <%= select_tag 'settings[issue_required_field_id]',
    options_for_release_notes_issue_required_field(@settings),
    :include_blank => true %>
    <em class="info">
      <%= t('release_notes.config.issue_required_field.info') %>
    </em>
  </p>
  <% %w(not_required todo done).each do |x| %>
    <p>
    <%= label_tag "settings[field_value_#{x}]",
      t("release_notes.config.field_value_#{x}.name") %>
    <%= text_field_tag "settings[field_value_#{x}]",
      @settings["field_value_#{x}"] %>
    </p>
  <% end %>
</div>

<%= submit_tag t(:button_save) %>
<% end %>
